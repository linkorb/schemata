{% extends "base.html.twig" %}

{% block content %}
    <h2>Table index</h2>
    <input
            id="searchInput"
            autofocus
            class="form-control"
            style="margin-top: 10px; margin-bottom: 10px;"
            placeholder="Search... "
    />
    {% for tagName in tagsAll %}
        <a
                href="tables__tag_{{ tagName }}.html"
                class="badge badge-info"
                style="margin: .2em 0 .2em 0"
        >{{ tagName }}</a>
    {% endfor %}
    <br/><br/>
    <table class="table">
        <thead>
        <tr>
            <th>Name</th>
            <th>Label/Description</th>
            <th style="text-align: center;">Aliases</th>
        </tr>
        </thead>
        <tbody id="table-body">
        {% for table in tables %}
            <tr>
                <td>
                    <a href="./table__{{ table.name }}.html">
                        <code class="badge badge-secondary">
                            {{ table.name }}
                        </code><br/>
                        {% if table.alias %}
                            <code class="badge badge-primary">{{ table.alias }}</code>
                        {% else %}
                            {# <code class="badge badge-danger">NO ALIAS</code> #}
                        {% endif %}
                    </a>
                </td>
                <td>
                    {% for tag in table.tags %}
                        <a
                                href="tables__tag_{{ tag.name }}.html"
                                class="badge badge-info"
                                style="margin: .2em 0 .2em 0"
                        >{{ tag.name }}</a>
                    {% endfor %}
                </td>
                <td style="text-align: center;">
                    <span class="badge badge-{{ table.getColumnAliasPercentageClass() }}">
                    {{ table.getColumnAliasPercentage() }}%
                    </span>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
