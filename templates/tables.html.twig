{% extends "base.html.twig" %}

{% block content %}
    <h2>Table index</h2>
    <input id="searchInput" autofocus class="form-control" style="margin-top: 10px; margin-bottom: 10px;" placeholder="Search... "/>

    <table class="table">
        <thead>
            <tr>
                <th>Name</th>
                <th>Label/Description</th>
                <th style="text-align: center;">Aliases</th>
            </tr>
        </thead>
        <tbody id="table-body">
        {% for table in tables %}
            <tr>
                <td>
                    <a href="./table__{{ table.name }}.html">
                        <code class="badge badge-secondary">
                        {{ table.name }}
                        </code><br />
                        {% if table.alias %}
                        <code class="badge badge-primary">{{ table.alias }}</code>
                        {% else %}
                        {# <code class="badge badge-danger">NO ALIAS</code> #}
                        {% endif %}
                    </a>
                </td>
                <td>
                    {% for tag in table.tags %}
                        <span class="badge badge-info">{{ tag.name }}</span>
                    {% endfor %}
                </td>
                <td style="text-align: center;">
                    <span class="badge badge-{{ table.getColumnAliasPercentageClass() }}">
                    {{ table.getColumnAliasPercentage() }}%
                    </span>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
